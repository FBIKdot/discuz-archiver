<% if (page) { %>
  <div class="pager">
    <a <%= (page.current - 1 < 1) ? 'disabled' : '' %> class="prev" href="<%= page.baseHref %>/<%= page.current > 2 ? page.current - 1 : 'index' %>.html">上一页</a>
    <span class="page-current"><%= page.current %></span>
    <span class="pipe">/</span>
    <span class="page-total"><%= page.total %></span>
    <a <%= (page.current + 1 > page.total) ? 'disabled' : '' %> class="next" href="<%= page.baseHref %>/<%= page.current + 1 %>.html">下一页</a>
  </div>
<% } %>
